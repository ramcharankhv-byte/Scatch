<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>cart</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <%- include('./partials/header') %>

        <% user.cart.forEach(function(item){ %>
            <% if(item.product) { %>
                <div class="w-full h-90 flex items-start px-20 py-20 mb-0 pb-0 gap-10">
                    <div class="w-[30%] rounded-md overflow-hidden">
                        <div class="w-full flex justify-center items-center h-80 bg-[<%= item.product.bgcolor %>]">
                            <img class="h-[16rem]"
                                src="data:image/jpeg;base64,<%= item.product.image.toString('base64') %>" alt="">
                        </div>

                        <div class="w-full flex justify-between px-5 py-4 bg-[<%= item.product.panelcolor %>]">
                            <h3 class="text-2xl text-[<%= item.product.textcolor %>]">
                                <%= item.product.name %>
                            </h3>
                            <div class="flex items-center gap-2">
                            <a href="/increase/<%= item.product._id %>">
                                <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                            </a>
                                <div class="px-2 py-1 rounded-md bg-white text-black">
                                    <%= item.quantity %>
                                </div>
                             <a href="/decrease/<%= item.product._id %>">
                                <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                            </a>
                            </div>
                        </div>

                        <div class="flex items-center justify-between px-5 py-3">
                            <h4 class="text-lg">Net Total</h4>
                            <h2 class="text-lg">₹ <%= (item.product.price - item.product.discount) * item.quantity %>
                            </h2>

                            <a href="/removefromcart/<%= item.product._id %>"
                                class="text-red-600 font-semibold">Remove</a>
                        </div>
                    </div>

                    <div class="w-[70%] mb-0 py-0">
                        <h3 class="text-xl">Price Breakdown</h3>
                        <div class="px-10 mt-5">
                            <div class="flex mt-2">
                                <h4 class="w-1/3">Total MRP</h4>
                                <h4>₹ <%= item.product.price %>
                                </h4>
                            </div>
                            <div class="flex mt-2">
                                <h4 class="w-1/3">Discount on MRP</h4>
                                <h4>₹ <%= item.product.discount %>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
                    <% }) %>
                        <div class="w-full h-2 flex items-start mt-0 px-20 gap-10">
                            <div class="w-[30%] rounded-md overflow-hidden">

                            </div>
                            <div class="w-[70%]">
                                <div class="w-full h-[1px] bg-black mt-0"></div>
                                <div class="flex mt-2">
                                    <h4 class="w-1/3">Platform Fee</h4>
                                    <h4>₹ 20</h4>
                                </div>
                                <div class="flex mt-2">
                                    <h4 class="w-1/3">Shipping Fee</h4>
                                    <h4>FREE</h4>
                                </div>
                                <div class="flex mt-3">
                                    <h3 class="w-1/3 text-xl">Total Amount</h3>
                                    <h3 class="font-semibold text-xl text-green-600">₹ <%= sum + 20 %>
                                    </h3>
                                </div>
                            </div>
                        </div>
                        <%- include('./partials/footer') %>
</body>

</html>